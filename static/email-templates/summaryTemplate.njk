<div>
    <!-- preamble-->
    <p>
        Hi {{ name }},<br><br>
        Here is the report for {{ energiserModeString }}
        {{ date }} over the {{ period }} period.<br><br>
        If the data looks wrong, the report is unclear or you have any suggestions, please let me know.<br><br>
        Andrew
    </p>
    <div>
        <div>
            <!-- Headline data -->
            <h1>Key data</h1>
            <table>
                <tr>
                    {% for key, item in summaryHeader %}
                        <td>{{item.prefix | d("") + item.val}}</td>
                    {% endfor %}
                    <h3>Online environment</h3>
                </tr>
                <tr>
                    {% for key, item in summaryHeader %}
                        <td>{{item.title}}</td>
                    {% endfor %}

                </tr>
            </table>
        </div>
        <div>
            <!-- table data -->
            <div>
                <h3>Store environment</h3>
                <table>
                    {% for key, item in storeReport %}
                        <tr>
                            <td>
                                {{ item.name }}
                            </td>
                            <td>
                                {{item.prefix | d("") + item.value + item.suffix | d("")}}

                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
            <div>
                <h3>Online environment</h3>
                <table>
                    {% for key, item in siteReport %}
                        <tr>
                            <td>
                                {{ item.name }}
                            </td>
                            <td>
                                {{item.prefix | d("") + item.value + item.suffix | d("")}}
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
</div>

