generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("PGHOST")
}

model Job {
  id           Int      @id @unique @default(autoincrement())
  createdAt    DateTime @default(now())
  customerName String
  address      String
  postcode     String
  latitude     Float
  longitude    Float
  numQuotes    Int      @default(5)
  Deals        Deal[]
}

model Installer {
  id        Int     @id @unique @default(autoincrement())
  name      String
  isPartner Boolean
  address   String
  postcode  String
  latitude  Float
  longitude Float
  Deals     Deal[]
}

model Deal {
  id          Int        @id @unique @default(autoincrement())
  jobId       Int
  createdAt   DateTime   @default(now())
  installerId Int
  status      DealStatus @default(PENDING)
  Installer   Installer  @relation(fields: [installerId], references: [id])
  Job         Job        @relation(fields: [jobId], references: [id])

  @@unique([jobId, installerId])
}

model Quote {
  installerId        Int
  dealId             Int
  totalQuote         Float
  quoteLabour        Float
  quoteScaffolding   Float
  quoteMaterials     Float
  quoteCertification Float
  dateOfCompletion   DateTime
  currTime           DateTime @default(now())

  @@id([installerId, dealId])
  @@unique([installerId, dealId])
}

model UnsubscribedEmails {
  email  String @id @unique
  reason String
}

enum DealStatus {
  PENDING
  ACCEPTED
  REJECTED
  EXPIRED
}
