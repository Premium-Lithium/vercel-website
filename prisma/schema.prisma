generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("POSTGRES_PRISMA_URL")
  directUrl         = env("POSTGRES_URL_NON_POOLING")
  shadowDatabaseUrl = env("POSTGRES_URL_NON_POOLING")
}

model Job {
  id           Int      @id @default(autoincrement())
  name         String
  createdAt    DateTime @default(now())
  customerName String
  address      String
  postcode     String
  latitude     Float
  longitude    Float
  Deal         Deal[]
}

model Installer {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  isPartner Boolean
  address   String
  postcode  String
  latitude  Float
  longitude Float
  Deal      Deal[]
}

model Deal {
  id          Int       @id
  name        String
  createdAt   DateTime  @default(now())
  jobId       Int
  installerId Int
  accepted    Boolean
  Installer   Installer @relation(fields: [installerId], references: [id])
  Job         Job       @relation(fields: [jobId], references: [id])
}

enum DealType {
  SOLICITATION
  OFFER
}